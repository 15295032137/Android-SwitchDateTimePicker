<resources>
    <attr name="dateTimeBackgroundColor" format="reference|color" />
    <attr name="dateTimeLabelBackgroundColor" format="reference|color" />
    <attr name="dateTimeIconColor" format="reference|color" />
    <attr name="dateTimeLabelAccentColor" format="reference|color" />
    <attr name="dateTimeLabelColor" format="reference|color" />

    <attr name="timeAmPmBackgroundColor" format="reference|color" />
    <attr name="timeAmPmSelectBackgroundColor" format="reference|color" />
    <attr name="timeAmPmTextColor" format="reference|color" />

    <!-- Date -->
    <attr name="dateSelectDayColor" format="reference|color" />

    <!-- Year -->
    <attr name="dateSelectYearBackgroundColor" format="reference|color" />
    <attr name="dateSelectYearTextColor" format="reference|color" />

    <!-- Attrs Switch Time -->
    <declare-styleable name="SwitchTimeCircleColor">
        <attr name="timeCircleColor" format="color" />
        <attr name="timeCenterColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SwitchTimeSelectorColor">
        <attr name="timeSelectorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SwitchTimeCircularNumbersColor">
        <attr name="timeCircularNumbersColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SwitchTimeAMPMColor">
        <attr name="amPmBackgroundColor" format="color" />
        <attr name="amPmSelectBackgroundColor" format="color" />
        <attr name="amPmTextColor" format="color" />
    </declare-styleable>

    <!-- Attrs Years -->
    <declare-styleable name="ListPickerYearView">
        <attr name="minYear" format="integer" />
        <attr name="maxYear" format="integer" />
        <attr name="defaultYear" format="integer" />
    </declare-styleable>

    <declare-styleable name="TextCircularIndicatorView">
        <!-- Change color of circle background TODO javadoc-->
        <attr name="colorCircleIndicator" format="reference|color" />
    </declare-styleable>

</resources>

