<resources>
    <!-- Base application theme. -->
    <style name="Theme.SwitchDateTime" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">@color/colorAccentM</item>

        <!-- DateTime -->
        <item name="dateTimeColorBackground">@color/colorAccentM</item>
        <item name="dateTimeColorLabelBackground">@color/colorAccentM</item>
        <item name="dateTimeColorLabel">#cacaca</item>
        <item name="dateTimeColorValue">#fff</item>
        <item name="dateTimeColorIcon">#fff</item>

        <!-- Time -->
        <item name="timeLabelColorBackground">@color/colorAccentM</item>
        <item name="timeLabelColorAccent">#ffffff</item>
        <item name="timeLabelColor">@color/timeLabelColor</item>

        <item name="timeColorBackground">#fff</item>
        <item name="timeColorCircle">#e1e1e1</item>
        <item name="timeColorCenter">#000</item>
        <item name="timeColorNumbers">#494949</item>
        <item name="timeColorSelector">@color/colorAccentM</item>

        <item name="timeAmPmColorBackground">@color/colorAccentM</item>
        <item name="timeAmPmColorSelectBackground">@color/colorAccentM</item>
        <item name="timeAmPmColorText">#fff</item>

        <!-- Date -->
        <item name="dateLabelColorBackground">@color/colorAccentM</item>

    </style>

    <style name="Theme.SwitchDateTime.DateTimeLabelText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Time precise -->
    <style name="Theme.SwitchDateTime.TimeLabelText">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/timeLabelColor</item>
    </style>

    <style name="Theme.SwitchDateTime.TimeLabelAmPm">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/timeLabelColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Date Precise -->
    <style name="Theme.SwitchDateTime.DateLabelYear">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dateLabelColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.SwitchDateTime.DateLabelMonthAndDay">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/dateLabelColor</item>
    </style>

</resources>
