<resources>
    <!-- Base application theme. -->
    <style name="Theme.SwitchDateTime" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- DateTime -->
        <item name="dateTimeColorBackground">?android:attr/colorAccent</item>
        <item name="dateTimeColorLabelBackground">?android:attr/colorAccent</item>
        <item name="dateTimeColorLabel">#cacaca</item>
        <item name="dateTimeColorValue">#fff</item>
        <item name="dateTimeColorIcon">#fff</item>

        <!-- Time -->
        <item name="timeLabelColorBackground">?android:attr/colorAccent</item>
        <item name="timeLabelColorAccent">#ffffff</item>
        <item name="timeLabelColor">@color/timeLabelColor</item>

        <item name="timeColorBackground">#fff</item>
        <item name="timeColorCircle">#e1e1e1</item>
        <item name="timeColorCenter">#000</item>
        <item name="timeColorNumbers">#494949</item>
        <item name="timeColorSelector">?android:attr/colorAccent</item>

        <item name="timeAmPmColorBackground">?android:attr/colorAccent</item>
        <item name="timeAmPmColorSelectBackground">?android:attr/colorAccent</item>
        <item name="timeAmPmColorText">#fff</item>

        <!-- Date -->
        <item name="dateLabelColorBackground">?android:attr/colorAccent</item>
        <item name="dateSelectDayColor">?android:attr/colorAccent</item>

        <!-- Year -->
        <item name="dateSelectYearBackgroundColor">?android:attr/colorAccent</item>
        <item name="dateSelectYearTextColor">@color/timeLabelColor</item>

    </style>

    <style name="Theme.SwitchDateTime.TitleDateTimeLabelText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/titleLabelColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Time precise -->
    <style name="Theme.SwitchDateTime.TimeLabelText">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/timeLabelColor</item>
    </style>

    <style name="Theme.SwitchDateTime.TimeLabelAmPm">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/timeLabelColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Date Precise -->
    <style name="Theme.SwitchDateTime.DateLabelMonthAndDay">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/timeLabelColor</item>
    </style>

    <!-- Year Precise -->
    <style name="Theme.SwitchDateTime.DateLabelYear">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/timeLabelColor</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
